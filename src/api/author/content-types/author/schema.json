{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "handle": {
      "type": "uid",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "followersCount": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "description": {
      "type": "string"
    },
    "background": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "imageUrl": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "author"
    }
  }
}
